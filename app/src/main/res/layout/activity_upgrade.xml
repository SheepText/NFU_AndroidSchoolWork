<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectActivity">

    <ImageView
        android:id="@+id/selectbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/selectbg"/>

    <ImageView
        android:id="@+id/classlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        app:srcCompat="@drawable/selectupgrade"/>


    <Button
        android:id="@+id/skillbutton_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@+id/class2select"
        android:layout_alignBottom="@+id/okbutton"
        android:background="@drawable/btnattack"
        android:onClick="upattackbtn"
        android:visibility="visible"/>

    <Button
        android:id="@+id/skillbutton_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/okbutton"
        android:background="@drawable/btnhp"
        android:onClick="uphpbtn"
        android:visibility="visible"/>

    <Button
        android:id="@+id/class2select"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/okbutton"
        android:background="@drawable/class2select"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/skillbutton_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="100dp"
        android:layout_toRightOf="@+id/class2select"
        android:layout_alignBottom="@+id/okbutton"
        android:background="@drawable/btnskill"
        android:onClick="upskillbtn"
        android:visibility="visible"/>

    <Button
        android:id="@+id/okbutton"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-10dp"
        app:layout_anchor="@+id/include"
        android:background="@drawable/okbutton"
        app:layout_anchorGravity="center"
        android:visibility="invisible"/>

</RelativeLayout>