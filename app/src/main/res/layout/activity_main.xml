<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
        android:id="@+id/bgimg"
        android:layout_width="wrap_content"
        android:layout_height="481dp"
        android:layout_above="@+id/continuousScrollableImageView"
        android:layout_marginBottom="-34dp"
        app:imageSrc="@drawable/background_2s"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.cunoraz.continuouscrollable.ContinuousScrollableImageView
        android:id="@+id/continuousScrollableImageView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-10dp"
        app:imageSrc="@drawable/floor"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/BitMapTest"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:srcCompat="@drawable/transparent_2160x1080" />

    <Button
        android:id="@+id/MoveTestBtn"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="GameStartTest"
        android:background="@drawable/gamestartbtn"
        tools:visibility="visible" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="BackBtn"
        android:background="@drawable/backbtn"
        android:visibility="invisible" />


    <Button
        android:id="@+id/skillbutton_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/continuousScrollableImageView"
        android:layout_alignBottom="@+id/bgimg"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GameStartTest"
        android:background="@drawable/class1"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/skillbutton_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/continuousScrollableImageView"
        android:layout_alignBottom="@+id/bgimg"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GameStartTest"
        android:background="@drawable/class2"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/skillbutton_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/continuousScrollableImageView"
        android:layout_alignBottom="@+id/bgimg"
        android:layout_marginStart="450dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="-20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="GameStartTest"
        android:background="@drawable/class3"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/player_HP"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="191dp"
        android:layout_height="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="18dp"
        android:max="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:progressDrawable="@drawable/hpprogressbar" />

    <ProgressBar
        android:id="@+id/expProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="191dp"
        android:layout_height="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="40dp"
        android:max="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:progressDrawable="@drawable/expprogressbar"/>

    <ImageView
        android:id="@+id/hpimg"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/hplogo" />

    <ImageView
        android:id="@+id/expimg"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/explogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="32dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:text="10/10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="220dp"
        android:layout_height="32dp"
        android:layout_marginStart="250dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="33dp"
        android:text="0/10" />

</RelativeLayout>